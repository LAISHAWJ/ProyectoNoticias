@model IEnumerable<NoticiasAdmin.Models.Paises>

@{
    ViewData["Title"] = "Países";
}

<!-- HEADER -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">
            <i class="fas fa-globe me-2 text-purple"></i>Países
        </h2>
        <span class="text-muted small">
            Gestión de países disponibles para noticias
        </span>
    </div>

    <a asp-action="Create" class="btn btn-gradient">
        <i class="fas fa-plus me-1"></i>
        Nuevo País
    </a>
</div>

<!-- TABLA -->
<div class="card card-modern">
    <div class="card-body p-0">

        <div class="table-responsive">
            <table class="table table-modern align-middle mb-0">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Código</th>
                        <th class="text-center">Estado</th>
                        <th>Fecha creación</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>

                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                No hay países registrados
                            </td>
                        </tr>
                    }

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">
                                @item.Nombre
                            </td>

                            <td>
                                <span class="badge badge-code">
                                    @item.Codigo
                                </span>
                            </td>

                            <td class="text-center">
                                @if (item.Activo == true)
                                {
                                    <span class="badge badge-active">Activo</span>
                                }
                                else
                                {
                                    <span class="badge badge-inactive">Inactivo</span>
                                }
                            </td>

                            <td class="text-muted">
                                @item.FechaCreacion?.ToString("dd/MM/yyyy")
                            </td>

                            <td class="text-end">
                                <a asp-action="Edit"
                                   asp-route-id="@item.PaisId"
                                   class="btn btn-action btn-edit"
                                   title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a asp-action="Delete"
                                   asp-route-id="@item.PaisId"
                                   class="btn btn-action btn-delete"
                                   title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>

<!-- ESTILOS -->
<style>
    :root {
        --purple-start: #7c3aed;
        --purple-end: #9333ea;
        --purple-soft: #f3e8ff;
    }

    .text-purple {
        color: var(--purple-start);
    }

    /* Card */
    .card-modern {
        border: none;
        border-radius: 16px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    /* Botón principal */
    .btn-gradient {
        background: linear-gradient(135deg, var(--purple-start), var(--purple-end));
        color: #fff;
        border-radius: 10px;
        padding: 10px 18px;
        font-weight: 500;
        border: none;
        box-shadow: 0 10px 25px rgba(124, 58, 237, 0.35);
        transition: all .25s ease;
    }

        .btn-gradient:hover {
            transform: translateY(-1px);
            color: #fff;
        }

    /* Tabla */
    .table-modern thead {
        background: #fafafa;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.03em;
    }

    .table-modern th,
    .table-modern td {
        padding: 16px 18px;
        border-bottom: 1px solid #e5e7eb;
    }

    .table-modern tbody tr:hover {
        background-color: var(--purple-soft);
    }

    /* Badges */
    .badge-code {
        background: rgba(59,130,246,.15);
        color: #1e40af;
        padding: 6px 12px;
        border-radius: 999px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .badge-active {
        background: rgba(16,185,129,.15);
        color: #065f46;
        padding: 6px 12px;
        border-radius: 999px;
        font-size: 0.75rem;
    }

    .badge-inactive {
        background: rgba(239,68,68,.15);
        color: #7f1d1d;
        padding: 6px 12px;
        border-radius: 999px;
        font-size: 0.75rem;
    }

    /* Acciones */
    .btn-action {
        border-radius: 8px;
        border: none;
        padding: 6px 10px;
        margin-left: 4px;
    }

    .btn-edit {
        background: rgba(245,158,11,.15);
        color: #92400e;
    }

    .btn-delete {
        background: rgba(239,68,68,.15);
        color: #7f1d1d;
    }
</style>
