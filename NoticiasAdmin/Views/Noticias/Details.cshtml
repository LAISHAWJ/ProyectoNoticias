@model NoticiasAdmin.Models.Noticia
@{
    ViewData["Title"] = "Detalles de Noticia";
}

<h2><i class="fas fa-info-circle me-2"></i>Detalles de la Noticia</h2>
<hr />

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">@Model.Titulo</h4>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ImagenUrl))
                {
                    <img src="@Model.ImagenUrl" alt="@Model.Titulo" class="img-fluid mb-3 rounded" />
                }

                <p class="lead">@Model.Resumen</p>
                <hr />
                <div class="mb-3">
                    @Model.Contenido
                </div>

                <div class="row mt-4">
                    <div class="col-md-6">
                        <p><strong>Categoría:</strong> <span class="badge bg-secondary">@Model.Categoria.Nombre</span></p>
                        <p><strong>País:</strong> @Model.Pais.Nombre</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Autor:</strong> @Model.Usuario.NombreCompleto</p>
                        <p><strong>Fecha:</strong> @(Model.FechaPublicacion?.ToString("dd/MM/yyyy HH:mm") ?? "Sin fecha")</p>
                        <p>
                            <strong>Estado:</strong>
                            @if (Model.Activo == true)
                            {
                                <span class="badge bg-success">Activa</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactiva</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@Model.NoticiaId" class="btn btn-warning">
                    <i class="fas fa-edit me-1"></i>Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Volver
                </a>
            </div>
        </div>
    </div>
</div>