@model NoticiasAdmin.Models.Categoria
@{
    ViewData["Title"] = "Eliminar Categoría";
}

<h2 class="text-danger"><i class="fas fa-trash-alt me-2"></i>Eliminar Categoría</h2>
<hr />

<div class="alert alert-danger">
    <h4>¿Está seguro que desea eliminar esta categoría?</h4>
</div>

<dl class="row">
    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Model.Nombre</dd>

    <dt class="col-sm-3">Descripción</dt>
    <dd class="col-sm-9">@Model.Descripcion</dd>

    <dt class="col-sm-3">Estado</dt>
    <dd class="col-sm-9">
        @if (Model.Activo == true)
        {
            <span class="badge bg-success">Activa</span>
        }
        else
        {
            <span class="badge bg-danger">Inactiva</span>
        }
    </dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CategoriaId" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash me-1"></i>Eliminar
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-times me-1"></i>Cancelar
    </a>
</form>