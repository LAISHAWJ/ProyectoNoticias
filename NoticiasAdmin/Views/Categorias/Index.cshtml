@model IEnumerable<NoticiasAdmin.Models.Categoria>

@{
    ViewData["Title"] = "Categorías";
}

<!-- HEADER -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">
            <i class="fas fa-tags me-2 text-purple"></i>Categorías
        </h2>
        <span class="text-muted small">
            Gestión de categorías del sistema
        </span>
    </div>

    <a asp-action="Create" class="btn btn-gradient">
        <i class="fas fa-plus me-1"></i>
        Nueva Categoría
    </a>
</div>

<!-- CARD -->
<div class="card card-modern">
    <div class="card-body p-0">

        <div class="table-responsive">
            <table class="table table-modern align-middle mb-0">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th class="text-center">Estado</th>
                        <th>Creación</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">
                                @item.Nombre
                            </td>

                            <td class="text-muted">
                                @item.Descripcion
                            </td>

                            <td class="text-center">
                                @if (item.Activo == true)
                                {
                                    <span class="badge badge-active">Activa</span>
                                }
                                else
                                {
                                    <span class="badge badge-inactive">Inactiva</span>
                                }
                            </td>

                            <td class="text-muted">
                                @item.FechaCreacion?.ToString("dd/MM/yyyy")
                            </td>

                            <td class="text-end">
                                <a asp-action="Edit"
                                   asp-route-id="@item.CategoriaId"
                                   class="btn btn-action btn-edit">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a asp-action="Delete"
                                   asp-route-id="@item.CategoriaId"
                                   class="btn btn-action btn-delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

<!-- ESTILOS ESPECÍFICOS -->
<style>
    :root {
        --purple-start: #7c3aed;
        --purple-end: #9333ea;
        --purple-soft: #ede9fe;
    }

    /* Header */
    .text-purple {
        color: var(--purple-start);
    }

    /* Botón gradiente */
    .btn-gradient {
        background: linear-gradient(135deg, var(--purple-start), var(--purple-end));
        color: #fff;
        font-weight: 500;
        border: none;
        border-radius: 10px;
        padding: 10px 18px;
        box-shadow: 0 10px 25px rgba(124, 58, 237, 0.35);
        transition: all 0.25s ease;
    }

        .btn-gradient:hover {
            transform: translateY(-1px);
            box-shadow: 0 15px 30px rgba(124, 58, 237, 0.45);
            color: #fff;
        }

    /* Card moderna */
    .card-modern {
        border: none;
        border-radius: 16px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    /* Tabla */
    .table-modern thead {
        background: #f8fafc;
        color: #374151;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.03em;
    }

    .table-modern th,
    .table-modern td {
        padding: 16px 18px;
        border-bottom: 1px solid #e5e7eb;
    }

    .table-modern tbody tr {
        transition: background 0.2s ease;
    }

        .table-modern tbody tr:hover {
            background-color: var(--purple-soft);
        }

    /* Badges */
    .badge-active {
        background: rgba(16, 185, 129, 0.15);
        color: #065f46;
        padding: 6px 12px;
        border-radius: 999px;
        font-weight: 500;
        font-size: 0.75rem;
    }

    .badge-inactive {
        background: rgba(239, 68, 68, 0.15);
        color: #7f1d1d;
        padding: 6px 12px;
        border-radius: 999px;
        font-weight: 500;
        font-size: 0.75rem;
    }

    /* Acciones */
    .btn-action {
        border-radius: 8px;
        border: none;
        padding: 6px 10px;
        margin-left: 4px;
        transition: all 0.2s ease;
    }

    .btn-edit {
        background: rgba(59, 130, 246, 0.15);
        color: #1e40af;
    }

    .btn-delete {
        background: rgba(239, 68, 68, 0.15);
        color: #7f1d1d;
    }

    .btn-action:hover {
        transform: scale(1.05);
    }
</style>
