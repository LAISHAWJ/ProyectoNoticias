@model IEnumerable<NoticiasAdmin.Models.Categoria>
@{
    ViewData["Title"] = "Categorías";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="fas fa-tags me-2"></i>Categorías</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Nueva Categoría
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Estado</th>
                    <th>Fecha Creación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Descripcion</td>
                        <td>
                            @if (item.Activo == true)
                            {
                                <span class="badge bg-success">Activa</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactiva</span>
                            }
                        </td>
                        <td>@item.FechaCreacion?.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>