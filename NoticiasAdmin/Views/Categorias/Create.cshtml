@model NoticiasAdmin.Models.Categoria
@{
    ViewData["Title"] = "Crear Categoría";
}

<h2><i class="fas fa-plus-circle me-2"></i>Nueva Categoría</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" id="formCategoria">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">
                    Nombre de la Categoría <span class="text-danger">*</span>
                </label>
                <input asp-for="Nombre" class="form-control"
                       placeholder="Ejemplo: Deportes"
                       required
                       maxlength="100" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
                <div class="invalid-feedback">
                    Por favor, ingrese el nombre de la categoría (máximo 100 caracteres).
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label">
                    Descripción
                </label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"
                          placeholder="Describe el tipo de noticias de esta categoría..."
                          maxlength="500"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
                <small class="form-text text-muted">Opcional - Máximo 500 caracteres</small>
            </div>

            <div class="mb-3">
                <label asp-for="Activo" class="form-label">
                    Estado <span class="text-danger">*</span>
                </label>
                <select asp-for="Activo" class="form-select" required>
                    <option value="">-- Seleccione un estado --</option>
                    <option value="true" selected>Activa</option>
                    <option value="false">Inactiva</option>
                </select>
                <span asp-validation-for="Activo" class="text-danger"></span>
                <small class="form-text text-muted">Las categorías inactivas no aparecerán en los formularios</small>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i>Guardar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Volver
                </a>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <div class="alert alert-info">
            <h5><i class="fas fa-info-circle me-2"></i>Campos Requeridos</h5>
            <p>Los campos marcados con <span class="text-danger">*</span> son obligatorios.</p>
            <ul class="mb-0">
                <li><strong>Nombre:</strong> Máximo 100 caracteres (Requerido)</li>
                <li><strong>Descripción:</strong> Máximo 500 caracteres (Opcional)</li>
                <li><strong>Estado:</strong> Activa o Inactiva (Requerido)</li>
            </ul>
        </div>

        <div class="alert alert-success">
            <h5><i class="fas fa-tags me-2"></i>Ejemplos de Categorías</h5>
            <ul class="mb-0">
                <li><strong>Deportes</strong> - Noticias deportivas y competencias</li>
                <li><strong>Tecnología</strong> - Innovación y avances tecnológicos</li>
                <li><strong>Política</strong> - Noticias gubernamentales y políticas</li>
                <li><strong>Entretenimiento</strong> - Espectáculos y cultura</li>
                <li><strong>Economía</strong> - Finanzas y negocios</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (function() {
            'use strict';
            const form = document.getElementById('formCategoria');

            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);

            // Contador de caracteres para descripción
            const descripcionTextarea = document.querySelector('textarea[name="Descripcion"]');
            if (descripcionTextarea) {
                const maxLength = 500;
                const counterDiv = document.createElement('small');
                counterDiv.className = 'form-text text-muted';
                descripcionTextarea.parentNode.appendChild(counterDiv);

                function updateCounter() {
                    const remaining = maxLength - descripcionTextarea.value.length;
                    counterDiv.textContent = `${descripcionTextarea.value.length}/${maxLength} caracteres`;
                    counterDiv.style.color = remaining < 50 ? '#dc3545' : '#6c757d';
                }

                descripcionTextarea.addEventListener('input', updateCounter);
                updateCounter();
            }
        })();
    </script>
}