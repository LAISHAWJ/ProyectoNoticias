@{
    ViewData["Title"] = "Dashboard";
}

<!-- HEADER -->
<div class="mb-4">
    <h1 class="fw-semibold mb-1">Dashboard</h1>
    <p class="text-muted">
        Bienvenido, @User.FindFirst("NombreCompleto")?.Value
    </p>
</div>

<!-- CARDS -->
<div class="row g-4 mb-5">

    <div class="row g-4 mb-5">

        <!-- NOTICIAS -->
        <div class="col-md-3">
            <div class="stat-card gradient-news">
                <div class="stat-body">
                    <div>
                        <h6 class="stat-title">Noticias</h6>
                        <h2 class="stat-value">@ViewBag.TotalNoticias</h2>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-newspaper"></i>
                    </div>
                </div>
                <div class="stat-footer">
                    <a asp-controller="Noticias" asp-action="Index">
                        Ver todas →
                    </a>
                </div>
            </div>
        </div>

        <!-- CATEGORÍAS -->
        <div class="col-md-3">
            <div class="stat-card gradient-categories">
                <div class="stat-body">
                    <div>
                        <h6 class="stat-title">Categorías</h6>
                        <h2 class="stat-value">@ViewBag.TotalCategorias</h2>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-tags"></i>
                    </div>
                </div>

                @if (ViewBag.Rol == "Administrador")
                {
                    <div class="stat-footer">
                        <a asp-controller="Categorias" asp-action="Index">
                            Gestionar →
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- PAÍSES -->
        <div class="col-md-3">
            <div class="stat-card gradient-countries">
                <div class="stat-body">
                    <div>
                        <h6 class="stat-title">Países</h6>
                        <h2 class="stat-value">@ViewBag.TotalPaises</h2>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-globe"></i>
                    </div>
                </div>

                @if (ViewBag.Rol == "Administrador")
                {
                    <div class="stat-footer">
                        <a asp-controller="Paises" asp-action="Index">
                            Gestionar →
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- USUARIOS -->
        @if (ViewBag.Rol == "Administrador")
        {
            <div class="col-md-3">
                <div class="stat-card gradient-users">
                    <div class="stat-body">
                        <div>
                            <h6 class="stat-title">Usuarios</h6>
                            <h2 class="stat-value">@ViewBag.TotalUsuarios</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                    <div class="stat-footer">
                        <a asp-controller="Usuarios" asp-action="Index">
                            Gestionar →
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

<!-- ÚLTIMAS NOTICIAS -->
<div class="card dashboard-card">
    <div class="card-header dashboard-header">
        Últimas noticias
    </div>
    <div class="card-body">
        @if (ViewBag.UltimasNoticias.Count == 0)
        {
            <div class="alert alert-light border">
                No hay noticias registradas.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="text-muted small">
                        <tr>
                            <th>Título</th>
                            <th>Categoría</th>
                            <th>Autor</th>
                            <th>Fecha</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var noticia in ViewBag.UltimasNoticias)
                        {
                            <tr>
                                <td>@noticia.Titulo</td>
                                <td>
                                    <span class="badge-soft">
                                        @noticia.Categoria.Nombre
                                    </span>
                                </td>
                                <td>@noticia.Usuario.NombreCompleto</td>
                                <td class="text-muted">
                                    @noticia.FechaPublicacion.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td class="text-end">
                                    <a asp-controller="Noticias"
                                       asp-action="Details"
                                       asp-route-id="@noticia.NoticiaId"
                                       class="btn btn-sm btn-outline-secondary">
                                        Ver
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- STYLES -->
<style>
    /* ===== STAT CARDS (ORIGINAL STYLE EVOLVED) ===== */
    .stat-card {
        border-radius: 16px;
        color: #ffffff;
        overflow: hidden;
        box-shadow: 0 18px 30px rgba(0,0,0,0.18);
    }

    .stat-body {
        padding: 20px 22px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .stat-title {
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        opacity: 0.85;
        margin-bottom: 4px;
    }

    .stat-value {
        font-size: 2.2rem;
        font-weight: 700;
        margin: 0;
    }

    .stat-icon {
        font-size: 3rem;
        opacity: 0.35;
        line-height: 1;
    }

    .stat-footer {
        padding: 12px 22px;
        background: rgba(255,255,255,0.12);
        font-size: 0.85rem;
    }

        .stat-footer a {
            color: #ffffff;
            text-decoration: none;
            font-weight: 500;
        }

            .stat-footer a:hover {
                text-decoration: underline;
            }

    /* ===== GRADIENTS MORADOS ===== */
    .gradient-news {
        background: linear-gradient(135deg, #5b2d6f, #7c3aed);
    }

    .gradient-categories {
        background: linear-gradient(135deg, #6d3c6f, #a855f7);
    }

    .gradient-countries {
        background: linear-gradient(135deg, #4b2c5e, #8b5cf6);
    }

    .gradient-users {
        background: linear-gradient(135deg, #3b1d4a, #9333ea);
    }

    /* ===== TABLE DETAILS ===== */
    .badge-soft {
        background-color: #ede9fe;
        color: #5b21b6;
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .dashboard-header {
        background-color: #fafafa;
        font-weight: 600;
    }
</style>
