@model NoticiasAdmin.Models.Usuario
@{
    ViewData["Title"] = "Editar Usuario";
}

<h2><i class="fas fa-user-edit me-2"></i>Editar Usuario</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post" id="formUsuarioEdit">

            <input type="hidden" asp-for="UsuarioId" />

            <div class="mb-3">
                <label class="form-label">
                    Nombre de Usuario <span class="text-danger">*</span>
                </label>
                <input name="NombreUsuario"
                       value="@Model.NombreUsuario"
                       class="form-control"
                       required />
                <div class="invalid-feedback">
                    El nombre de usuario es obligatorio.
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    Email <span class="text-danger">*</span>
                </label>
                <input name="Email"
                       type="email"
                       value="@Model.Email"
                       class="form-control"
                       required />
                <div class="invalid-feedback">
                    Ingrese un email válido.
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Nueva Contraseña</label>
                <input name="NuevaPassword"
                       type="password"
                       class="form-control"
                       minlength="6"
                       placeholder="Opcional (mín. 6 caracteres)" />
                <div class="invalid-feedback">
                    Si ingresa contraseña, debe tener al menos 6 caracteres.
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    Nombre Completo <span class="text-danger">*</span>
                </label>
                <input name="NombreCompleto"
                       value="@Model.NombreCompleto"
                       class="form-control"
                       required />
                <div class="invalid-feedback">
                    El nombre completo es obligatorio.
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    Rol <span class="text-danger">*</span>
                </label>
                <select name="Rol" class="form-select" required>
                    <option value="">-- Seleccione un rol --</option>
                    <option value="Editor" selected="@(Model.Rol == "Editor")">Editor</option>
                    <option value="Administrador" selected="@(Model.Rol == "Administrador")">Administrador</option>
                </select>
                <div class="invalid-feedback">
                    Debe seleccionar un rol.
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    Estado <span class="text-danger">*</span>
                </label>
                <select name="Activo" class="form-select" required>
                    <option value="">-- Seleccione un estado --</option>
                    <option value="true" selected="@Model.Activo">Activo</option>
                    <option value="false" selected="@(Model.Activo == false)">Inactivo</option>
                </select>
                <div class="invalid-feedback">
                    Debe seleccionar el estado.
                </div>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i>Actualizar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Volver
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            'use strict';
            const form = document.getElementById('formUsuarioEdit');

            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        })();
    </script>
}
