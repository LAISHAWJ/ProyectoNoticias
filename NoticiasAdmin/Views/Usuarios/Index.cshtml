@model IEnumerable<NoticiasAdmin.Models.Usuario>
@{
    ViewData["Title"] = "Usuarios";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="fas fa-users me-2"></i>Usuarios</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-user-plus me-1"></i>Nuevo Usuario
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Usuario</th>
                    <th>Nombre Completo</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NombreUsuario</td>
                        <td>@item.NombreCompleto</td>
                        <td>@item.Email</td>
                        <td>
                            @if (item.Rol == "Administrador")
                            {
                                <span class="badge bg-danger">@item.Rol</span>
                            }
                            else
                            {
                                <span class="badge bg-info">@item.Rol</span>
                            }
                        </td>
                        <td>
                            @if (item.Activo == true)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactivo</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.UsuarioId" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.UsuarioId" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.UsuarioId" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>