@model NoticiasAdmin.Models.Usuario
@{
    ViewData["Title"] = "Crear Usuario";
}

<h2><i class="fas fa-user-plus me-2"></i>Nuevo Usuario</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" id="formUsuario">

            <div class="mb-3">
                <label class="form-label">
                    Nombre de Usuario <span class="text-danger">*</span>
                </label>
                <input name="NombreUsuario"
                       class="form-control"
                       placeholder="Ejemplo: jperez"
                       required />
                <div class="invalid-feedback">
                    El nombre de usuario es obligatorio.
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    Email <span class="text-danger">*</span>
                </label>
                <input name="Email"
                       type="email"
                       class="form-control"
                       placeholder="usuario@ejemplo.com"
                       required />
                <div class="invalid-feedback">
                    Ingrese un email válido.
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    Contraseña <span class="text-danger">*</span>
                </label>
                <input name="Password"
                       type="password"
                       class="form-control"
                       required
                       minlength="6" />
                <div class="invalid-feedback">
                    La contraseña es obligatoria y debe tener al menos 6 caracteres.
                </div>
                <small class="form-text text-muted">
                    Mínimo 6 caracteres
                </small>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    Nombre Completo <span class="text-danger">*</span>
                </label>
                <input name="NombreCompleto"
                       class="form-control"
                       placeholder="Juan Pérez"
                       required />
                <div class="invalid-feedback">
                    El nombre completo es obligatorio.
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    Rol <span class="text-danger">*</span>
                </label>
                <select name="Rol" class="form-select" required>
                    <option value="">-- Seleccione un rol --</option>
                    <option value="Editor">Editor</option>
                    <option value="Administrador">Administrador</option>
                </select>
                <div class="invalid-feedback">
                    Debe seleccionar un rol.
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">
                    Estado <span class="text-danger">*</span>
                </label>
                <select name="Activo" class="form-select" required>
                    <option value="">-- Seleccione un estado --</option>
                    <option value="true" selected>Activo</option>
                    <option value="false">Inactivo</option>
                </select>
                <div class="invalid-feedback">
                    Debe seleccionar el estado.
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i>Guardar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Volver
                </a>
            </div>
        </form>
    </div>

    <!-- PANEL DERECHO -->
    <div class="col-md-6">
        <div class="alert alert-info">
            <h5><i class="fas fa-info-circle me-2"></i>Campos Requeridos</h5>
            <p>Los campos marcados con <span class="text-danger">*</span> son obligatorios.</p>
            <ul class="mb-0">
                <li>Nombre de usuario único</li>
                <li>Email válido</li>
                <li>Contraseña mínima de 6 caracteres</li>
                <li>Nombre completo requerido</li>
                <li>Rol y estado obligatorios</li>
            </ul>
        </div>

        <div class="alert alert-warning">
            <h5><i class="fas fa-user-shield me-2"></i>Roles</h5>
            <p><strong>Editor:</strong> Gestiona solo sus noticias</p>
            <p class="mb-0"><strong>Administrador:</strong> Acceso total al sistema</p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            'use strict';
            const form = document.getElementById('formUsuario');

            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        })();
    </script>
}
