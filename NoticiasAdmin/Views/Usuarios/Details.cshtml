@model NoticiasAdmin.Models.Usuario
@{
    ViewData["Title"] = "Detalles del Usuario";
}

<h2><i class="fas fa-user-circle me-2"></i>Detalles del Usuario</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">@Model.NombreCompleto</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Usuario</dt>
                    <dd class="col-sm-8">@Model.NombreUsuario</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Nombre Completo</dt>
                    <dd class="col-sm-8">@Model.NombreCompleto</dd>

                    <dt class="col-sm-4">Rol</dt>
                    <dd class="col-sm-8">
                        @if (Model.Rol == "Administrador")
                        {
                            <span class="badge bg-danger">@Model.Rol</span>
                        }
                        else
                        {
                            <span class="badge bg-info">@Model.Rol</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Estado</dt>
                    <dd class="col-sm-8">
                        @if (Model.Activo == true)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Fecha Creación</dt>
                    <dd class="col-sm-8">@Model.FechaCreacion?.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Noticias Creadas</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-secondary">@ViewBag.CantidadNoticias</span>
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@Model.UsuarioId" class="btn btn-warning">
                    <i class="fas fa-edit me-1"></i>Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Volver
                </a>
            </div>
        </div>
    </div>
</div>