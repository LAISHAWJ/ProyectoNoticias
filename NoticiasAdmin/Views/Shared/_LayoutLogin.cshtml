<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WeverNews</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --primary: #6d3c6f;
            --secondary: #3b2a4d;
            --accent: #c79ac3;
            --border: #e5e7eb;
            --text-muted: #6b7280;
        }

        body {
            margin: 0;
            min-height: 100vh;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            background: radial-gradient( circle at top, #6d3c6f 0%, #3b2a4d 60%, #241a33 100% );
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-wrapper {
            width: 100%;
            max-width: 440px;
            padding: 24px;
        }

        .login-card {
            background: #ffffff;
            border-radius: 20px;
            padding: 44px 40px;
            box-shadow: 0 35px 70px rgba(0, 0, 0, 0.25);
            animation: fadeUp 0.6s ease;
        }

        @@keyframes fadeUp {
            from {
                opacity: 0;
                transform: translateY(18px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-header {
            text-align: center;
            margin-bottom: 36px;
        }

        .logo {
            width: 64px;
            height: 64px;
            margin: 0 auto 12px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-weight: 700;
            font-size: 1.4rem;
            box-shadow: 0 10px 25px rgba(109, 60, 111, 0.45);
        }

        .login-title {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--secondary);
        }

            .login-title span {
                color: var(--primary);
            }

        .login-subtitle {
            font-size: 0.95rem;
            color: var(--text-muted);
            margin-top: 6px;
        }

        .login-footer {
            margin-top: 34px;
            padding-top: 18px;
            border-top: 1px solid var(--border);
            text-align: center;
            font-size: 0.8rem;
            color: var(--text-muted);
        }
    </style>
</head>
<body>

    <div class="login-wrapper">
        <div class="login-card">
            <div class="login-header">
                <div class="logo">WN</div>
                <div class="login-title">Wever<span>News</span></div>
                <div class="login-subtitle">Centro de administración</div>
            </div>

            @RenderBody()

            <div class="login-footer">
                © @DateTime.Now.Year WeverNews · Panel administrativo
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
