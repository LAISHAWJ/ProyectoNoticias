<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WeverNews</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        :root {
            --sidebar-bg: #2b193a;
            --sidebar-text: #e9d5ff;
            --accent: #a855f7;
            --bg: #f7f6f9;
            --card: #ffffff;
            --text-main: #1f2937;
            --text-muted: #6b7280;
            --border: #e5e7eb;
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            background-color: var(--bg);
            font-family: "Segoe UI", Tahoma, sans-serif;
            color: var(--text-main);
        }

        /* ===== LAYOUT ===== */
        .admin-layout {
            display: flex;
            min-height: 100vh;
        }

        /* ===== SIDEBAR (SLIM) ===== */
        .sidebar {
            width: 210px;
            background: linear-gradient(180deg, #24152f, #2b193a);
            padding: 20px 14px;
            display: flex;
            flex-direction: column;
            border-right: 1px solid rgba(255,255,255,0.08);
        }

        .sidebar-logo {
            font-size: 1.15rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 26px;
            color: #ffffff;
            letter-spacing: -0.5px;
        }

            .sidebar-logo span {
                color: #d8b4fe;
            }

        .menu {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

            .menu a {
                display: flex;
                align-items: center;
                gap: 12px;
                padding: 10px 12px;
                border-radius: 10px;
                color: var(--sidebar-text);
                text-decoration: none;
                font-size: 0.9rem;
                transition: all 0.2s ease;
            }

                .menu a i {
                    font-size: 0.95rem;
                    width: 18px;
                    text-align: center;
                }

                .menu a:hover {
                    background-color: rgba(255,255,255,0.12);
                }

                .menu a.active {
                    background-color: rgba(168,85,247,0.25);
                    color: #fff;
                }

        /* ===== MAIN ===== */
        .main {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        /* ===== HEADER ===== */
        .header {
            height: 60px;
            background-color: var(--card);
            border-bottom: 1px solid var(--border);
            display: flex;
            align-items: center;
            justify-content: flex-end;
            padding: 0 26px;
        }

        .user {
            display: flex;
            align-items: center;
            gap: 14px;
            font-size: 0.9rem;
        }

        .user-name {
            font-weight: 600;
        }

        .user-role {
            font-size: 0.75rem;
            padding: 3px 8px;
            border-radius: 999px;
            background-color: #ede9fe;
            color: #5b21b6;
        }

        .logout-btn {
            background: none;
            border: none;
            color: var(--text-muted);
            cursor: pointer;
            font-size: 0.9rem;
        }

            .logout-btn:hover {
                color: #7c3aed;
            }

        /* ===== CONTENT ===== */
        .content {
            padding: 32px;
        }

        /* ===== FOOTER ===== */
        footer {
            text-align: center;
            padding: 14px;
            font-size: 0.75rem;
            color: var(--text-muted);
        }

        /* ===== RESPONSIVE ===== */
        @@media (max-width: 768px) {
            .sidebar {
                width: 64px;
            }

            .sidebar-logo,
            .menu a span {
                display: none;
            }

            .menu a {
                justify-content: center;
            }
        }
    </style>
</head>
<body>

    <div class="admin-layout">

        <!-- SIDEBAR -->
        <aside class="sidebar">
            <div class="sidebar-logo">
                Wever<span>News</span>
            </div>

            <nav class="menu">
                <a asp-controller="Home" asp-action="Index">
                    <i class="fas fa-chart-line"></i><span>Dashboard</span>
                </a>

                <a asp-controller="Noticias" asp-action="Index">
                    <i class="fas fa-newspaper"></i><span>Noticias</span>
                </a>

                @if (User.IsInRole("Administrador"))
                {
                    <a asp-controller="Categorias" asp-action="Index">
                        <i class="fas fa-tags"></i><span>Categorías</span>
                    </a>

                    <a asp-controller="Paises" asp-action="Index">
                        <i class="fas fa-globe"></i><span>Países</span>
                    </a>

                    <a asp-controller="Usuarios" asp-action="Index">
                        <i class="fas fa-users"></i><span>Usuarios</span>
                    </a>
                }
            </nav>
        </aside>

        <!-- MAIN -->
        <div class="main">

            <!-- HEADER -->
            <header class="header">
                <div class="user">
                    <span class="user-name">@User.FindFirst("NombreCompleto")?.Value</span>
                    <span class="user-role">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span>

                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="logout-btn" title="Cerrar sesión">
                            <i class="fas fa-sign-out-alt"></i>
                        </button>
                    </form>
                </div>
            </header>

            <!-- CONTENT -->
            <main class="content">
                @RenderBody()
            </main>

            <!-- FOOTER -->
            <footer>
                © @DateTime.Now.Year WeverNews · Panel Administrativo
            </footer>

        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
